VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=
EXT_DEPS ?=

RUST_SRC = \
	$(addprefix src/lib/,\
		ffi.rs \
		callbacks.rs)

UNAME=$(shell uname)
ifeq ($(UNAME),Darwin)
LDFLAGS = -L ../glfw -lglfw -framework Cocoa -framework OpenGL -framework IOKit -framework CoreFoundation -framework QuartzCore
endif
ifeq ($(UNAME),Linux)
LDFLAGS = -L ../glfw -lglfw -lX11 -lXrandr -lXi -lXxf86vm -lGL
endif


.PHONY: link
link:
	sh $(VPATH)/etc/link-rs.sh "$(LINK_ARGS)" > $(VPATH)/src/lib/link.rs

.PHONY: all
all: libglfwrs.dummy

libglfwrs.dummy: link src/lib/lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) -C link-args="$(LDFLAGS)" $< --out-dir .
	touch $@

.PHONY: check
check:

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test
